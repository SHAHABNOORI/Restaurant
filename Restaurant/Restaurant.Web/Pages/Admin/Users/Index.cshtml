@page
@using Restaurant.Utilities

@if (User.IsInRole(StaticDetails.ManagerRole))
{
    <div class="border backgroundWhite container">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary">Application User List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-page="/Account/Register" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp; Create New</a>
            </div>
        </div>
        <br />
        <br />
        <table id="Dt_Load" class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

}
else
{
    <header>
        <h1 class="text-danger">Access denied</h1>
        <p class="text-danger">You do not have access to this resource.</p>
    </header>
}


@section Scripts{

    <script src="~/js/user.js"></script>
}